{
  "name": "vue3-monorepo-optimizations",
  "private": true,
  "packageManager": "pnpm@8",
  "workspaces": [
    "packages/*",
    "core/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .vue,.ts --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.8.3"
  }
}